<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lucky"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jiameng.lottery.circle.SquareFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:stretchMode="vertical">

            <com.jiameng.lottery.circle.LotterySpanView
                android:id="@+id/lottery_span"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="42dp" />

            <ImageView
                android:id="@+id/lottery_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/turntable_lamp_background" />

            <ImageView
                android:id="@+id/lottery_start"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/turntable_start" />
        </com.jiameng.lottery.circle.SquareFrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lottery_speed_low"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="速度8-12" />

            <Button
                android:id="@+id/lottery_speed_middle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="速度12-18" />

            <Button
                android:id="@+id/lottery_speed_fast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="速度18-24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lottery_damp_low"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="速度24阻尼3" />

            <Button
                android:id="@+id/lottery_damp_middle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="速度24阻尼4" />

            <Button
                android:id="@+id/lottery_damp_fast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="速度24阻尼5" />
        </LinearLayout>

        <Button
            android:id="@+id/lottery_square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:text="方形奖盘" />
    </LinearLayout>
</ScrollView>
